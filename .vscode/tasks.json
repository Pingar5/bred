{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "build.bat",
            "problemMatcher": {
                "owner": "odin",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*.odin)\\((\\d+):(\\d+)\\).*: (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ],
}